#Determinar las Raices

FX<-function(x)exp(x)-pi
fx<-function(x)exp(x)

newton<-function(x1){
  conta<-0
  error<-1
  x<-x1
  x<-seq(-3,3,0.001)
  plot(x,FX(x),type = "l",col="red")
  abline(h=0,col="blue")
  while(error!=0)
  {
    x2<-x1-(FX(x1)/fx(x1))
    error<-abs(FX(x1)/fx(x1))
    if(error==0)break;
    cat("X=",x1,"\t","E=",error,"\tIteraciÃ³n=",conta,"\n")
    x1<-x2
    conta<-conta+1
  }
}
newton(1)
